<%- include('./shared/header.ejs') %>
<!-- Receipt section -->
<main>
  <h3>Customer Receipt</h3>
  <table style="width: 100%">
    <tr>
      <th>Name:</th>
      <td><%= name %></td>
    </tr>
    <tr>
      <th>Address:</th>
      <td><%= address %></td>
    </tr>
    <tr>
      <th>Province:</th>
      <td><%= province %></td>
    </tr>
    <tr>
      <th>City:</th>
      <td><%= city %></td>
    </tr>
    <tr>
      <th>Email:</th>
      <td><%= email %></td>
    </tr>
    <tr>
      <th>Phone:</th>
      <td><%= phone %></td>
    </tr>
    <tr>
      <th>Tax% (as per Province):</th>
      <td><%= tax %>%</td>
    </tr>
    <tr>
      <th>Items * Quantity</th>

      <td>
        <% for(item of items){ %> <%= item.name %> * <%= item.qty %> ,<% } %>
        <br />
      </td>
    </tr>
    <tr>
      <th>Subtotal:</th>
      <td>$<%= total %></td>
    </tr>
    <tr>
      <th>Total tax amount:</th>
      <td>$<%= taxCal %></td>
    </tr>
    <tr>
      <th>Total:</th>
      <td>$<%= final %></td>
    </tr>
  </table>
</main>

<%- include('./shared/footer.ejs') %>
